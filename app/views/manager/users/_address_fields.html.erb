<div class="nested-fields">
  <div>
    <%= f.label :city, t(".city") %>
    <span class="require-field">*</span>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div>
    <%= f.label :country, t(".country") %>
    <span class="require-field">*</span>
    <%= f.text_field :country, class: "form-control" %>
  </div>
  <%= link_to_remove_association f do %>
    <%= t ".remove_address" %>
  <% end %>
</div>
