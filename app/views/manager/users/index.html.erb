<%= provide :title, t(".title") %>
<div class="col-md-12">
  <div class="col-xs-12 box-show" id="members-table-manager">
    <div class="col-md-6 box-user-searching">
      <%= render "shared/search_user" %>
    </div>
    <h4 class="col-md-12">
      <%= t ".member" %>
      <span id="total-members">
        (<%= @members.size %>)
      </span>
    </h4>
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".division" %></th>
            <th><%= t ".address" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody id="body-members-table">
          <%= render partial: "member", collection: @members, as: :member %>
        </tbody>
      </table>
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
