<div>
  <h4>
    <%= t ".all_report" %>
    (<span id="num-reports">
      <%= @reports.size %>
    </span>)
  </h4>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".plan" %></th>
      <th>
        <%= sort_link @report, :created_at, t(".date_created") %>
      </th>
      <th>
        <%= sort_link @report, :status, t(".status") %>
      </th>
      <th class="center-action"><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @reports %>
  </tbody>
</table>
<%== pagy_nav(@pagy) %>
