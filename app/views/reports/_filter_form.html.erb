<div class="input-group col-md-12" id="form-report-filter">
  <%= form_tag reports_path, method: :get do %>
    <div class="col-md-4">
      <p><%= t ".date_created" %></p>
      <%= date_field :filter, :created_at, value: params.dig(:filter, :created_at), class: "input-filter-report" %>
    </div>
    <div class="col-md-4">
      <p><%= t ".status" %></p>
      <%= select_tag "filter[status]",
          options_for_select(Report.statuses.to_a,
          params.dig(:filter, :status)),
          prompt: "all", class: "input-filter-report" %>
    </div>
    <div class="col-md-4 div-submit-filter-report">
      <%= submit_tag t(".search"), class: "btn btn-success" %>
    </div>
  <% end %>
</div>
